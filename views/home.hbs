//alert(address);
	var encodedAddress = encodeURI(address);

//	alert("your encoded address is " + encodedAddress);

var geocodedUrl = `https://maps.googleapis.com/maps/api/geocode/json?&address=${encodedAddress}`;
document.getElementById("results").innerHTML = ("Your geocodedUrl is " + geocodedUrl); //https://maps.googleapis.com/maps/api/geocode/json?&address=11540%20SW%20107%20Court%20miami%20florida%203317
